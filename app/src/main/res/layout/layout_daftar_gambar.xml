<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF7F7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/riwayat_catatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="280dp"
                android:background="@drawable/ic_background_riwayat"
                android:text="Kembali"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_body_tower"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_background_input"
                        android:src="@mipmap/ic_logo_launcher_round"
                        />

                    <ImageView
                        android:id="@+id/img_row_arah_kendari"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_background_input"
                        android:src="@mipmap/ic_logo_launcher_round"
                        />

                    <ImageView
                        android:id="@+id/img_nomor_tower"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_background_input"
                        android:src="@mipmap/ic_logo_launcher_round"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/img_halaman_tower"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_background_input"
                        android:src="@mipmap/ic_logo_launcher_round"
                        />

                    <ImageView
                        android:id="@+id/img_row_arah_unaaha"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_background_input"
                        android:src="@mipmap/ic_logo_launcher_round"
                        />

                    <ImageView
                        android:id="@+id/img_aksesoris_tower"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_background_input"
                        android:src="@mipmap/ic_logo_launcher_round"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>