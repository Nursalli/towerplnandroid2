<!--            android:textColor="#fff"-->
<!--            android:padding="5dp"-->
<!--            android:text="Logout"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->

    </LinearLayout>

</RelativeLayout>