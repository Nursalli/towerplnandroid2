<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF7F7"
    tools:context=".ui.beranda.BerandaFragment">

    <TextView
        android:id="@+id/text_beranda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_logo_2"
        android:layout_marginTop="110dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_logo_launcher_round"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_below="@+id/iv_logo_2"
        android:padding="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/span_kumulatif"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_cari"
            android:background="@drawable/ic_background_input"
            android:hint="Masukkan Jarak Komulatif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="@string/area"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/unaaha_kendari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unaaha - Kendari" />

            <RadioButton
                android:id="@+id/kendari_unaaha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kendari - Unaaha" />

        </RadioGroup>

        <Button
            android:id="@+id/submit"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_background_submit"
            android:textColor="#fff"
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>